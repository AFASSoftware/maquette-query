{
  "compilerOptions": {
    "lib": ["DOM", "ES2022"],
    "module": "Node16",
    "target": "ES2022",
    "moduleResolution": "Node16",
    "declaration": false,
    "strict": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "noEmit": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "include": ["src/**/*.ts", "test/**/*.ts"]
}
